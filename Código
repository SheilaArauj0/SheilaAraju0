#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <conio.h>
#include <locale.h>

// Seção de Declarações das Variáveis de uma Equação do 2º grau

int num1, 
      num2, 
      num3, 
      x1, 
      x2,
      resultado,
      status;
	
// Seção de Comandos, procedimentos, funções, operadores, etc..

int main(){

   setlocale(LC_ALL," ");

   printf("Digite o valor de a:");
    scanf("%d", &num1);
    
   printf("Digite o valor de b:");
    scanf("%d", &num2);
    
   printf("Digite o valor de c:");
    scanf("%d", &num3); 
	
   resultado = num2 * num2 - 4 * num1 * num3;
    printf("Valor de Delta: %d", resultado);
 
 if(resultado<=-1)
{
   printf("\nNão há raizes reais");
}
   else
{
    x1 = - num2 + (sqrt(resultado)) / 2 * num1;
    x2 = - num2 - (sqrt(resultado)) / 2 * num1;
    
    printf("\nO valor de x1: %d", x1);
    printf("\nO valor de x2: %d", x2);
}
   	return 0;
    getch();
}
